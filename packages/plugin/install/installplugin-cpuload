#!/bin/bash
#
# [Quick Box :: Install cpuload plugin]
#
# GITHUB REPOS
# GitHub _ packages  :   https://github.com/QuickBox/quickbox_packages
# GitHub _ plugins   :   https://github.com/QuickBox/quickbox_rutorrent-plugins
# LOCAL REPOS
# Local _ packages   :   /etc/QuickBox/packages
# Local _ plugins    :   /etc/QuickBox/rtplugins
# Author             :   QuickBox.IO | JMSolo
# URL                :   https://quickbox.io
#
# QuickBox Copyright (C) 2017 QuickBox.io
# SPDX-License-Identifier: GPL-3.0-or-later
#
OUTTO=/srv/rutorrent/home/db/output.log

function _installplugin-cpuload() {
	username=$(whoami)
	rutorrent="/srv/rutorrent/"
	echo "Accessing cpuload in the plugin vault ... " >>"${OUTTO}" 2>&1
	PLUGINVAULT="/usr/local/bin/quickbox/rutorrent/plugins/"
	cd "${rutorrent}plugins"
	sleep 5

	echo "Installing cpuload plugin ... " >>"${OUTTO}" 2>&1
	PLUGIN="cpuload"
	for i in $PLUGIN; do
		cp -R "${PLUGINVAULT}$i" .
	done
	sleep 5

	echo "Adjusting permissions ... " >>"${OUTTO}" 2>&1
	chown -R www-data: ${rutorrent}plugins/$PLUGIN
	echo "CPUload Plugin Install Complete!" >>"${OUTTO}" 2>&1

	sleep 5
	echo >>"${OUTTO}" 2>&1
	echo >>"${OUTTO}" 2>&1
	echo "Close this dialog box to refresh your browser" >>"${OUTTO}" 2>&1

	exit
}

_installplugin-cpuload
