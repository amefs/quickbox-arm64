function _updatedashboard() {
	\cp -fR ${local_themes}defaulted/skins/* ${dashboard}skins
	rm -rf ${dashboard}db/.smoked.lock >/dev/null 2>&1
	printf "" >${dashboard}db/.defaulted.lock
	service nginx reload >/dev/null 2>&1
	/usr/local/bin/quickbox/system/auxiliary/php-fpm-cli -r 'opcache_reset();'
	sleep 5

}

local_themes=/etc/QuickBox/setup/themes/
dashboard=/srv/dashboard/

_updatedashboard
